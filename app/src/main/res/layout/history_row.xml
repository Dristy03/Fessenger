<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:elevation="10dp"
    app:cardCornerRadius="24dp"
    android:layout_margin="10dp"
    android:padding="10dp"
    app:cardBackgroundColor="@color/colorPrimary"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Todays Date"
            android:layout_margin="10dp"
            android:id="@+id/todayDateId"
            android:fontFamily="@font/small"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="You have sent a message to your future self!"
            android:fontFamily="@font/wel"
            android:textColor="@android:color/white"
            android:layout_margin="5dp"
            android:layout_gravity="center_horizontal"
            android:textSize="15sp"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Arrival Date :"
            android:fontFamily="@font/wel2"
            android:textColor="@android:color/white"
            android:layout_margin="5dp"
            android:textSize="15sp"/>
            <TextView
                android:id="@+id/dateId"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Friday,3rd Mar 2027"
                android:fontFamily="@font/wel2"
                android:textColor="@android:color/white"
                android:layout_margin="5dp"
                android:textSize="15sp"/>



        </LinearLayout>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Stay Connected!!!"
            android:layout_margin="10dp"
            android:textStyle="bold"
            android:textSize="16sp"
            android:layout_gravity="center_horizontal"
            android:fontFamily="@font/wel"
            />

    </LinearLayout>

</androidx.cardview.widget.CardView>